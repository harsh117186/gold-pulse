{
  "name": "gold-pulse",
  "version": "1.0.0",
  "description": "Gold and Silver price tracking service",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "echo 'Installing NestJS CLI...' && npm install -g @nestjs/cli && echo 'Installing dependencies...' && npm install --no-audit --no-fund --prefer-offline && echo 'Building with webpack...' && NODE_OPTIONS='--max-old-space-size=4096' npx nest build --webpack --verbose",
    "start": "node dist/main.js",
    "start:dev": "npx nest start --watch",
    "start:debug": "npx nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "clean": "rm -rf dist node_modules package-lock.json",
    "rebuild": "npm run clean && npm run build"
  },
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "dependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^3.0.1",
    "@types/node": "^20.3.1",
    "axios": "^1.4.0",
    "base32-decode": "1.0.0",
    "class-validator": "^0.14.0",
    "joi": "^17.11.0",
    "notp": "^2.0.3",
    "proper-lockfile": "^4.1.2",
    "puppeteer": "^21.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "smartapi-javascript": "^1.0.27",
    "typescript": "^5.1.3",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/notp": "^2.0.5",
    "@types/proper-lockfile": "^4.1.4",
    "@types/supertest": "^2.0.12",
    "@types/ws": "^8.18.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "overrides": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0"
  },
  "cacheDirectories": [
    ".npm"
  ],
  "config": {
    "unsafe-perm": true
  }
}
