  "overrides": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0"
  },
  "cacheDirectories": [
    ".npm"
  ],
  "config": {
    "unsafe-perm": true,
    "network-timeout": 300000
