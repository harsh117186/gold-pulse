    "axios": "^1.6.2",
    "class-validator": "^0.14.0",
    "joi": "^17.11.0",
    "notp": "^2.0.3",
    "proper-lockfile": "^4.1.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.0.0",
